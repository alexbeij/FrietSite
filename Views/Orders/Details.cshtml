@model FrietSite.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <h4>Producten</h4>
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                @Html.DisplayFor(modelItem => product.Name) -
                @product.Price.ToString("C") <!-- Toon prijs als valuta -->
            </li>
        }
    </ul>

    <!-- Totaalprijs weergeven -->
    <h4>Totaalprijs</h4>
    <p>
        @Model.Products.Sum(p => p.Price).ToString("C") <!-- Bereken en toon de totaalprijs -->
    </p>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>
