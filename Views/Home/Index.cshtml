@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Header Sectie -->
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4" style="font-family: 'Poppins', sans-serif; color: #333;">Welkom bij Frietzaak!</h1>
        </div>
    </div>

    <!-- Afbeelding en Welkom tekst -->
    <div class="row align-items-center" style="margin-top: 30px;">
        <div class="col-md-6">
            <img src="~/img/foto.jpg" alt="Home pagina afbeelding" class="img-fluid rounded shadow" style="width: 100%; max-width: 450px; margin-bottom: 20px;">
        </div>
        <div class="col-md-6">
            <p style="font-size: 1.2em; line-height: 1.7; font-family: 'Open Sans', sans-serif;">
                Bij Frietzaak staan we bekend om onze heerlijke, krokante frieten en versgebakken snacks. Onze ingrediënten zijn van de hoogste kwaliteit, en we bereiden alles met liefde en aandacht voor detail.
                Of je nu zin hebt in een traditionele friet of een van onze unieke snacks, we hebben voor ieder wat wils! Kom snel langs en proef zelf waarom wij de favoriete frietzaak van de stad zijn!
            </p>
            <a href="#contact" class="btn btn-warning btn-lg mt-3">Neem Contact Op</a>
        </div>
    </div>

    <!-- Contact en Openingstijden Sectie -->
    <div class="row" id="contact" style="margin-top: 60px;">
        <div class="col-md-6">
            <h2 style="font-family: 'Poppins', sans-serif; color: #333;">Contact</h2>
            <p style="font-size: 1.1em; line-height: 1.6;">
                Heb je vragen of opmerkingen? Neem contact met ons op via:
            </p>
            <p style="font-size: 1.1em; font-family: 'Open Sans', sans-serif;">
                <strong>Email:</strong> info@frietzaak.nl<br />
                <strong>Telefoon:</strong> 0123-456789<br />
                <strong>Adres:</strong> Frietstraat 1, 1234 AB, Stad
            </p>
        </div>
        <div class="col-md-6 text-md-right">
            <h3 style="font-family: 'Poppins', sans-serif; color: #333;">Openingstijden</h3>
            <p style="font-size: 1.1em; line-height: 1.6; font-family: 'Open Sans', sans-serif;">
                Maandag - Vrijdag: 11:00 - 21:00<br />
                Zaterdag: 12:00 - 22:00<br />
                Zondag: Gesloten
            </p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9f9f9;
    }

    h1, h2, h3 {
        font-weight: 600;
    }

    p {
        color: #555;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border-color: #f0ad4e;
        color: #fff;
    }

    .btn-warning:hover {
        background-color: #ec971f;
        border-color: #d58512;
    }
</style>
