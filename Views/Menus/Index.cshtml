@model IEnumerable<FrietSite.Models.Category>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<div class="menu-container">
    <div class="category">
        <h2>Friet</h2>
        <ul>
            @foreach (var product in Model.FirstOrDefault(c => c.Name == "Friet")?.Products)
            {
                <li>@product.Name - <span class="price">@product.Price.ToString("C")</span></li>
            }
        </ul>
    </div>

    <div class="category">
        <h2>Snacks</h2>
        <ul>
            @foreach (var product in Model.FirstOrDefault(c => c.Name == "Snacks")?.Products)
            {
                <li>@product.Name - <span class="price">@product.Price.ToString("C")</span></li>
            }
        </ul>
    </div>

    <div class="category">
        <h2>Dranken</h2>
        <ul>
            @foreach (var product in Model.FirstOrDefault(c => c.Name == "Drankjes")?.Products)
            {
                <li>@product.Name - <span class="price">@product.Price.ToString("C")</span></li>
            }
        </ul>
    </div>
</div>

<style>
    .menu-container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .category {
        flex: 1;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        margin: 0 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .category h2 {
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
            font-family: 'Arial', sans-serif;
        }

        .category ul {
            list-style: none;
            padding: 0;
        }

        .category li {
            padding: 10px;
            font-size: 18px;
            border-bottom: 1px solid #eaeaea;
            display: flex;
            justify-content: space-between;
        }

            .category li:hover {
                background-color: #f1f1f1;
                transition: background-color 0.3s ease;
            }

    .price {
        font-weight: bold;
        color: #28a745;
    }
</style>
