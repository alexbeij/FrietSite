@model IEnumerable<FrietSite.Models.Category>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<div class="menu-container">
    <div class="category">
        <h2>Friet</h2>
        <ul>
            @foreach (var product in Model.FirstOrDefault(c => c.Name == "Friet")?.Products)
            {
                <li>@product.Name - @product.Price.ToString("C")</li>
            }
        </ul>
    </div>

    <div class="category">
        <h2>Snacks</h2>
        <ul>
            @foreach (var product in Model.FirstOrDefault(c => c.Name == "Snacks")?.Products)
            {
                <li>@product.Name - @product.Price.ToString("C")</li>
            }
        </ul>
    </div>

    <div class="category">
        <h2>Dranken</h2>
        <ul>
            @foreach (var product in Model.FirstOrDefault(c => c.Name == "Drankjes")?.Products)
            {
                <li>@product.Name - @product.Price.ToString("C")</li>
            }
        </ul>
    </div>
</div>

<style>
    .menu-container {
        display: flex;
        justify-content: space-between;
    }
    .category {
        flex: 1;
        padding: 0 20px;
    }
</style>
