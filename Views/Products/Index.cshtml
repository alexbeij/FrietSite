@model IEnumerable<FrietSite.Models.Product>

@{
    ViewData["Title"] = "Productbeheer";
}

<h1>Productbeheer</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuw Product Toevoegen</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Bewerken</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        margin-top: 20px;
        width: 100%;
        font-family: 'Arial', sans-serif;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
    }

    .btn {
        margin-right: 5px;
        padding: 5px 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-warning {
        background-color: #ffc107;
    }

    .btn-info {
        background-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
    }
</style>
